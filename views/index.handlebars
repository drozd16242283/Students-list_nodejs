{{#if error}}
    <div class="alert alert-danger" role="alert">
        <h2>{{error}}</h2>
    </div>
{{else}}
    <div class="container">
            <table class="table table-hover">
            <tr>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Email</th>
                <th>Группа</th>
                <th>Оценка</th>
            </tr>

            {{#if data}}
                {{#each data}}
                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.secoundName}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.group}}</td>
                        <td>{{this.mark}}</td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{secoundName}}</td>
                    <td>{{email}}</td>
                    <td>{{group}}</td>
                    <td>{{mark}}</td>
                </tr>
            {{/if}}

        </table>
    </div>
{{/if}}


